BoxLayoutExample:

<BoxLayoutExample>:
    orientation:"horizontal"
    Button:
        text: "A"
        
        # jadiin none none biar bisa pke size
        size_hint: .5,.5
        # size:"40dp","40dp"
        # width: "100dp"
        # height: "60dp"
        # x, center_x, right
        # y, center_y, top
        # pake size hint buat ngedaliin V
        pos_hint: { "center_y" :0.5}


    BoxLayout:
        orientation:"vertical"
        spacing:"10dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"
    Label:
        text: "C" 

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "100dp"
        pos: "100dp","200dp"
        color: 0,0,1,1
    Label:
        text: "Hello2"
        size: "100dp", "100dp"
        pos: "200dp","300dp"
        color: 1,0,0,1